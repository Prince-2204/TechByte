{
    "name": "Screenshot extension",
    "version": "3.0",
    "description": "Building a screenshot taking extension",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        
        "default_icon": "icon.png",
        "default_title": "Take a screen shot!" 
        
        
    },
    "icons": {
        "48": "icon.png"
        
    },
    "permissions": [
        "activeTab"
    ],
    "manifest_version": 2
  }
  
  

